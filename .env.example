# OpenAI Configuration (or Perplexity API)
OPENAI_API_KEY=your_perplexity_api_key_here
OPENAI_API_BASE=https://api.perplexity.ai
LLM_MODEL=sonar
EMBEDDING_MODEL=text-embedding-3-small

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=us-east-1
AWS_S3_PATH=documents/

# MongoDB Configuration
MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?appName=Cluster0&retryWrites=true&w=majority&ssl=true
MONGODB_DATABASE=chat_with_doc
MONGODB_COLLECTION=chat_history

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
