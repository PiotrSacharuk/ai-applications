# ============================================
# CURRENT IMPLEMENTED PROVIDERS
# ============================================
# Storage: s3 (AWS S3)
# Database: mongodb (MongoDB Atlas)
# Embeddings: huggingface (Local sentence-transformers)
# LLM: Perplexity API (via OpenAI-compatible API)

# ============================================
# Perplexity API Configuration
# ============================================
OPENAI_API_KEY=your_perplexity_api_key_here
OPENAI_API_BASE=https://api.perplexity.ai
LLM_MODEL=sonar-reasoning
LLM_TEMPERATURE=0.0

# ============================================
# AWS S3 Storage
# ============================================
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=us-east-1
AWS_S3_PATH=documents/

# ============================================
# MongoDB Database
# ============================================
DATABASE_PROVIDER=mongodb
MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?appName=Cluster0&retryWrites=true&w=majority&ssl=true
MONGODB_DATABASE=chat_with_doc
MONGODB_COLLECTION=chat_history

# ============================================
# HuggingFace Embeddings (Local, Free)
# ============================================
EMBEDDINGS_PROVIDER=huggingface
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# ============================================
# Application Configuration
# ============================================
APP_HOST=0.0.0.0
APP_PORT=8000
